<grammar xmlns="http://relaxng.org/ns/structure/1.0" datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">
    <start>
        <element name="regions">
            <oneOrMore>
	        <ref name="Region"/>
            </oneOrMore>
        </element>
    </start>

    <define name="Region">
        <element name="region">
            <attribute name="id">
                <data type="token">
		    <param name="pattern">[a-z][a-z_]*</param>
		</data>
            </attribute>
            <attribute name="name">
                <data type="token"/>
            </attribute>

            <zeroOrMore>
                <ref name="Section"/>
            </zeroOrMore>

        </element>
    </define>

    <define name="Section">
        <element name="section">
            <attribute name="name">
                <choice>
                    <value>Communications</value>
                    <value>Economy</value>
		    <value>Energy</value>
                    <value>Geography</value>
                    <value>Government</value>
                    <value>Introduction</value>
                    <value>Military and Security</value>
                    <value>People and Society</value>
                    <value>Terrorism</value>
                    <value>Transnational Issues</value>
                    <value>Transportation</value>
                  </choice>
            </attribute>

            <zeroOrMore>
                <ref name="Subsection"/>
            </zeroOrMore>

        </element>
    </define>

